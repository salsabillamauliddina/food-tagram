<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head') %>
    <body>
        <%- include('partials/nav') %>
        <pre><%= JSON.stringify(mainData) %></pre>
        <h1>Edit List Favourite</h1>
        <form action="/myfood/edit" method="POST">
            <div class="form-group mid col-6">
                <label class="form-label bigger-text" for="favListName"> Name The Story </label>
                <input class="form-control" type="text" name="favListName" placeholder="" value="<%= mainData.favListName %>">
            </div>
            <div class="form-group mid col-6">
                <label class="form-label bigger-text" for="FoodId">Food</label>
                    <select class="form-control" name="FoodId">
                        <option selected disabled> Select Food </option>
                        <% food.forEach(el => { %>
                            <option value="<%= el.id %>"> <%= el.food_name %> </option>
                        <% }); %>
                    </select>
            </div>
            <div class="form-group mid col-6">
                <label class="form-label bigger-text" for="listDescription"> Share Your Story </label>
                <input class="form-control" type="text" name="listDescription" placeholder="" value="<%= mainData.listDescription %>">
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
            <button class="btn btn-primary"><a href="/myfood">Cancel</a></button>
        </form>

        
        <%- include('partials/script') %> 
    </body>
</html>